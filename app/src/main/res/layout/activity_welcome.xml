<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/welcome_to_a"
        android:textColor="#455468"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTitle"
        android:layout_marginTop="-60dp"
        android:foregroundGravity="center"
        android:src="@drawable/welcome" />

    <TextView
        android:id="@+id/welcomeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeImage"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="This is awesome project don by us,
you can connect to anyone without internet connection, this is a third line"
        android:textColor="#707070"
        android:textSize="18sp" />

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custom_button"
        android:paddingHorizontal="50dp"
        android:text="GET STARTED"
        android:textSize="18dp" />


</RelativeLayout>