<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="@string/welcome_to_a"
        android:textColor="@color/ternary_color"
        android:textSize="35sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/welcomeImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTitle"
        android:layout_marginTop="-60dp"
        android:foregroundGravity="center"
        android:src="@drawable/welcome" />

    <TextView
        android:id="@+id/welcomeDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeImage"
        android:text="Description TODO"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/getStartedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeDescription"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:paddingHorizontal="50dp"
        android:text="GET STARTED"
        android:textSize="18dp"/>


</RelativeLayout>